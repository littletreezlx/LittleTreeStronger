        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
>

    <Button
            android:id="@+id/btn_exercise_record"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="exercise_record"/>

    <Button
            android:id="@+id/btn_exercise_plan_table"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="exercise_plan_table"/>

    <Button
            android:id="@+id/btn_exercise_statistics"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="exercise_statistics"/>

</LinearLayout>